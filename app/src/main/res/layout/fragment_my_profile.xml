                    <ImageView
                        android:id="@+id/card_icon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/goals48" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
